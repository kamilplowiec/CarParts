@model CarParts.Models.Account.RegisterModel
@{
    ViewBag.Title = "CarParts - Rejestracja";


    var roleList = new List<SelectListItem>();
    if (ViewBag.RoleList != null)
    {
        roleList = (List<SelectListItem>)ViewBag.RoleList;
    }
}

<div class="container bg-main">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                @*<div class="panel-heading">
                    <h3 class="panel-title" style="text-align:center">Register to system<br /> CarParts</h3>
                </div>*@
                <div class="panel-body">
                    <div class="logo"><i class="fa fa-users icon"></i><img src="" /></div>
                    <br />
                    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                    {
                <fieldset>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.Partial("../Shared/_Messages")

                    <div class="form-group">
                        @Html.ValidationMessageFor(m => m.FirstName)
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Name", autofocus = "autofocus" })
                    </div>
                    <div class="form-group">
                        @Html.ValidationMessageFor(m => m.LastName)
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Surname" })
                    </div>
                    <div class="form-group">
                        @Html.ValidationMessageFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        @Html.ValidationMessageFor(m => m.AccountRole)
                        @Html.DropDownListFor(x => x.AccountRole, roleList, new { @class = "form-control" })
                    </div>
                    <hr />
                    <div class="form-group">
                        @Html.ValidationMessageFor(m => m.UserName)
                        <i class="fa fa-user icon"></i>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username" })
                    </div>
                    <div class="form-group">
                        @Html.ValidationMessageFor(m => m.Password)
                        <i class="fa fa-lock icon"></i>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                    <div class="form-group">
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        <i class="fa fa-lock icon"></i>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Repeat password" })
                    </div>
                    <hr />
                    <button type="submit" class="btn btn-sm btn-primary btn-block">Dodaj użytkownika</button>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-sm btn-secondary btn-block">Logowanie</a>
                </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
