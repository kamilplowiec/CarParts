@model CarParts.Models.Account.ChangePasswordModel
@{
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-12" style="text-align: left">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.Partial("../Shared/_Messages")
        </div>
        <h1 class="page-header">Zmiana hasła</h1>
    </div>
</div>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="row">
        <div class="form-group">
            <div class="col-sm-3 control-label">
                <label>Stare hasło:</label>
                <span class="redstar">*</span>
            </div>
            <div class="col-sm-3">
                @Html.ValidationMessageFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">
                <label>Nowe hasło:</label>
                <span class="redstar">*</span>
            </div>

            <div class="col-sm-3">
                @Html.ValidationMessageFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label">
                <label>Powtórz nowe hasło:</label>
                <span class="redstar">*</span>
            </div>
            <div class="col-sm-3">
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group col-sm-3">
            <input type="submit" value="Zmień hasło" class="btn btn-default btn-primary" />
        </div>
    </div>
}


