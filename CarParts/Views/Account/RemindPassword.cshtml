@{
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;

    ViewBag.Title = "Remind password";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Remind password</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        <fieldset>
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.Partial("../Shared/_Messages")
                            <div class="form-group">
                                <label>E-mail:</label>
                                <input type="text" class="form-control" autofocus="autofocus" />
                            </div>
                            <button type="submit" class="btn btn-primary">Remind</button>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-default">Powrót</a>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
