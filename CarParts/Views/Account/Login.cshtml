@model CarParts.Models.Account.LoginModel

@{
    ViewBag.Title = "CarParts - Logowanie";

    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}

<div class="container bg-main" id="login-panel">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <!--<div class="panel-heading">-->
                    @*<h3 class="panel-title" style="text-align:center">Magazyn części samochodowych</h3>*@

                <!--</div>-->
                <div class="panel-body">
                    <div class="logo"><i class="fa fa-users icon"></i><img src="" /></div>
                    <br />
                    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                    {
                        <fieldset>
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.Partial("../Shared/_Messages")
                            <div class="form-group">
                                @Html.ValidationMessageFor(m => m.UserName)
                                <i class="fa fa-user icon"></i>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Login", autofocus = "autofocus" })
                            </div>
                            <div class="form-group">
                                @Html.ValidationMessageFor(m => m.Password)
                                <i class="fa fa-lock icon"></i>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Hasło" })
                            </div>
                            @*<div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(m => m.RememberMe)Remember me
                                    </label>
                                </div>*@

                            <hr />

                            <button type="submit" class="btn btn-sm btn-primary btn-block">Login</button>
                            @*<a href="@Url.Action("RemindPassword", "Account")" class="pull-right">Zapomniałem hasła</a>*@
                            <a href="@Url.Action("Register", "Account")" class="btn btn-sm btn-secondary btn-block">Stwórz konto</a>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
