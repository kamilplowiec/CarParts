<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />




    <!-- Bootstrap Core CSS -->
    <link href="~/Content/sbadmin/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    @Styles.Render("~/jQueryUI_CSS")

    <!-- Include one of jTable styles. -->
    <link href="~/Content/JTable/themes/lightcolor/blue/jtable.min.css" rel="stylesheet" />

    <!-- MetisMenu CSS -->
    <link href="~/Content/sbadmin/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/sbadmin/dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/sbadmin/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- JTable Validation CSS -->
    <link href="~/Content/validationEngine/validationEngine.jquery.css" rel="stylesheet" type="text/css" />


    @Styles.Render("~/Content/css")

    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .main_box {
            position: relative;
            background: url('side.jpeg') right no-repeat;
            background-size: cover;
            height: 100vh;
            width: 100%;
        }

            .main_box .sidebar-menu {
                position: absolute;
                height: 97%;
                width: 280px;
                left: -280px;
                background: rgba(0,0,0, 0.75);
                box-shadow: 0px 0px 6px rgba(255, 255, 255, 0.5);
                overflow: hidden;
                transition: all 0.3s linear;
                font-family: 'Poppins', sans-serif;
                z-index: 1;
            }

        .sidebar-menu .logo {
            min-height: 90px;
            padding-left: 100px;
            padding-top: 10px;
            aposition: absolute;
            width: 100%;
            height: 60px;
            abox-shadow: 0px 2px 4px rgba(255, 255, 255, 0.5);
        }

            .sidebar-menu .logo a {
                color: #fff;
                font-size: 25px;
                font-weight: 500;
                position: absolute;
                left: 50px;
                line-height: 60px;
                text-decoration: none;
            }


            .sidebar-menu .logo .icon {
                padding: 15px 15px;
                border: 1px solid;
                border-radius: 100%;
                background: #444444;
                min-width: 40px;
                font-size: 30px;
                color: lightgray;
            }

        .sidebar-menu .menu {
            position: absolute;
            top: 120px;
            width: 100%;
        }

            .sidebar-menu .menu li {
                margin-top: 2px;
                padding: 10px 20px;
            }

            .sidebar-menu .menu i {
                color: #fff;
                font-size: 20px;
                padding-right: 8px;
            }

            .sidebar-menu .menu a {
                color: #fff;
                font-size: 12px;
                text-decoration: none;
            }

            .sidebar-menu .menu li:hover {
                border-left: 1px solid #fff;
                box-shadow: 0 0 4px rgba(255, 255, 255, 0.5);
            }

        .sidebar-menu .social_media {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom: 20px;
            list-style: none;
            cursor: pointer;
        }

            .sidebar-menu .social_media i {
                text-decoration: none;
                padding: 0 5px;
                color: #fff;
                opacity: 0.6;
                font-size: 20px;
            }

                .sidebar-menu .social_media i:hover {
                    opacity: 1;
                    transition: all 0.2s linear;
                    transform: scale(1.01);
                }

        #check {
            display: none;
        }

        .main_box .btn_one i {
            color: #fff;
            font-size: 30px;
            font-weight: 700;
            position: absolute;
            left: 16px;
            aline-height: 60px;
            cursor: pointer;
            opacity: 1;
            transition: all 0.3s linear;
            z-index: 1;
        }

        .sidebar-menu .btn_two i {
            font-size: 25px;
            line-height: 60px;
            position: absolute;
            left: 240px;
            cursor: pointer;
            opacity: 0;
            transition: all 0.3s linear;
        }

        .navbar-menu {
            height: 40px;
            width: 100%;
            background: #000000b5;
        }

        .btn_one {
            position: fixed;
            z-index: 1;
        }

            .btn_one i:hover {
                font-size: 29px;
            }

        .btn_two i:hover {
            font-size: 24px;
        }

        #check:checked ~ .sidebar-menu {
            left: 0;
        }

        #check:checked ~ .btn_one i {
            opacity: 0;
        }

        #check:checked ~ .sidebar-menu .btn_two i {
            opacity: 1;
        }

        #check:checked ~ .sidebar-menu ~ .page-body {
            width: calc(100% - 280px);
            margin-left: 280px;
        }

        .page-body {
            padding-top: 10px;
        }

        .profile-menu {
            text-align: center;
        }

            .profile-menu .dropdown-menu {
                top: inherit;
                left: 50px;
            }

        .page-name {
            font-size: 26px;
            font-weight: 600;
            margin-left: 60px;
        }
    </style>

    <script>
        //Localization texts
        var jtMsgLang = {
            serverCommunicationError: 'Wystąpił problem podczas komunikacji z serwerem.',
            loadingMessage: 'Ładowanie rekordów...',
            noDataAvailable: 'Brak danych.',
            addNewRecord: 'Dodaj nowy rekord',
            editRecord: 'Edycja',
            areYouSure: 'Czy jesteś pewien?',
            deleteConfirmation: 'Ten rekord zostanie usunięty. Czy jesteś pewien?',
            save: 'Zapisz',
            saving: 'Zapisywanie',
            cancel: 'Anuluj',
            deleteText: 'Usuń',
            deleting: 'Usuwanie',
            error: 'Błąd',
            close: 'Zamknij',
            cannotLoadOptionsFor: 'Nie można załadować opcji wyboru dla {0}',
            pagingInfo: '{0}-{1} z {2}',
            pageSizeChangeLabel: 'Liczba',
            gotoPageLabel: 'Idź do',
            canNotDeletedRecords: 'Nie można usunąć {0} z {1} rekordów!',
            deleteProggress: 'Usuwanie {0} z {1} rekordów, proszę czekać...'
        };
    </script>

</head>
<body>

    @if (!Request.IsAuthenticated)
    {
        @RenderBody()
    }
    else
    {
        <div class="main_box">
            <div class="navbar-menu">
                <div class="btn_one">
                    <label for="check">
                        <i class="fa fa-bars"></i>
                    </label>
                </div>
                <div class="page-name">
                    <a href="~/Home/Index">CarParts</a>
                </div>
            </div>
            <input type="checkbox" id="check" checked>
            <div class="sidebar-menu">
                <div class="btn_two">
                    <label for="check">
                        <i class="fa fa-times"></i>
                    </label>
                </div>

                <div class="profile-menu">
                    <ul>
                        <li class="">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-caret-down"></i>  @CarParts.Helpers.CurrentUser.Name (@CarParts.Helpers.CurrentUser.Role.ToString())
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="@Url.Action("ChangePassword", "Account")"><i class="fa fa-user fa-fw"></i>Zmień hasło</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Logout", "Account")" style="text-decoration: none"><i class="fa fa-sign-out fa-fw"></i>Wyloguj</a>
                                </li>
                            </ul>
                            <!-- /.dropdown-user -->
                        </li>
                    </ul>
                </div>

                <div class="logo">
                    <i class="fa fa-users icon"></i>
                    <img src="" />
                </div>

                <div class="menu">
                    <ul>
                        <li>
                            <a href="~/"><i class="fa fa-home fa-fw"></i>Strona główna</a>
                        </li>
                        @if (CarParts.Helpers.CurrentUser.Warehouseman || CarParts.Helpers.CurrentUser.Seller)
                        {
                            <li>
                                <a href="~/Shipment"><i class="fa fa-envelope fa-fw"></i>Zamówienia</a>
                            </li>
                        }
                        @if (CarParts.Helpers.CurrentUser.Warehouseman)
                        {
                            <li>
                                <a href="~/Product"><i class="fa fa-archive fa-fw"></i>Magazyn</a>
                            </li>
                        }
                        @if (CarParts.Helpers.CurrentUser.Seller)
                        {
                            <li>
                                <a href="~/Customer"><i class="fa fa-user fa-fw"></i>Klienci</a>
                            </li>
                        }
                        @if (CarParts.Helpers.CurrentUser.Administrator)
                        {
                            <li>
                                <a href="~/Account"><i class="fa fa-users fa-fw"></i>Użytkownicy</a>
                            </li>
                            <li>
                                <a href="~/Delivery"><i class="fa fa-truck fa-fw"></i>Dostawcy</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="social_media">
                    <ul>
                        <a href="#"><i class="fa fa-facebook">https://facebook.com/kamil.plowiec</i></a>
                        <a href="#"><i class="fa fa-instagram"></i>https://www.instagram.com/plowieckamil/</a>
                    </ul>
                </div>
            </div>
            <!-- /#page-wrapper -->
            <div class="page-body">
                @RenderBody()
            </div>
        </div>
    }

    <footer>
        <div class="container">
            <div class="row">
                <hr>
                <div class="row">
                    <div class="col-lg-12 footer-below">
                        <p class="pull-left"><a href="https://github.com/kamilplowiec/carparts">CarParts (C) 2023</a></p>
                        <p class="pull-right"><a href="https://kamilp.aspnet.pl">Kamil Płowiec</a></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->


    <script src="~/Content/sbadmin/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Content/sbadmin/bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/sbadmin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>


    <!-- Custom Theme JavaScript -->
    <script src="~/Content/sbadmin/dist/js/sb-admin-2.js"></script>

    @Scripts.Render("~/jQueryUI_JS")

    <!-- Include jTable script file. -->
    <script src="~/Content/JTable/jquery.jtable.min.js"></script>
    <script src="~/Scripts/Site.js"></script>

    <!-- JTable Validation -->
    <script type="text/javascript" src="~/Content/validationEngine/validationEngine.jquery.js"></script>
    <script type="text/javascript" src="~/Content/validationEngine/validationEngine-pl.jquery.js"></script>

    @RenderSection("scripts", required: false)


</body>
</html>

